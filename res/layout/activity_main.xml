<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
    </ExpandableListView>
             
		
    <FrameLayout
        android:id="@+id/camera_preview"
	    android:layout_width="fill_parent"
	    android:layout_height="440dip"
	    android:layout_weight="0.59" 
	    android:layout_alignLeft="@+id/expandableListView"
	    android:layout_below="@+id/expandableListView" >            
		
    	<Button
            android:id="@+id/forwardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expandableListView"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@+id/backwardButton"
            android:onClick="myButtonClickHandler"
            android:text="Next Step" />
        
        <Button
            android:id="@+id/backwardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_below="@+id/expandableListView"
            android:layout_toLeftOf="@+id/forwardButton"
            android:layout_alignParentRight="true"
            android:onClick="myButtonClickHandler"
            android:text="Last Step" />                
        
    </FrameLayout>
        
    <FrameLayout
        android:id="@+id/locationview"
        android:layout_alignLeft="@+id/expandableListView"
        android:layout_below="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="42dp" >

    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/topview"
        android:layout_alignLeft="@+id/expandableListView"
        android:layout_below="@+id/locationview"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="0dp" >

    </FrameLayout>

</RelativeLayout>